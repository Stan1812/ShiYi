<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rair.diary.ui.setting.remind.NotifyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/notify_iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/back_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置提醒"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="提醒我写日记"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/notify_switch_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/notify_tv_remind_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:text="提醒时间:"
                android:textColor="@color/text_color_select"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/notify_tv_set"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/white"
                android:background="@drawable/textview_bg_select"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/divider" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/btn_main_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="增加提醒"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_bg_select"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/btn_main_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="更新提醒时间"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_bg_select"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="添加自定义提醒"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_bg_select"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/btn_main_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="删除提醒"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_bg_select"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

<!--        <TextView-->
<!--            android:id="@+id/tv_event"-->

<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:textSize="16sp"-->
<!--            tools:text="事件" />-->
    </LinearLayout>
</LinearLayout>
